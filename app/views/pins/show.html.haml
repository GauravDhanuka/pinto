.image-wrapper
	= image_tag @pin.image.url(:medium)

%h1= @pin.title

%p= @pin.description

%p
	Submitted by 
	= @pin.user.email

%br/	
.button-group
	.btn.btn-default
		= link_to "Back", root_path
	.btn.btn-default	
		= link_to "Edit", edit_pin_path
	.btn.btn-default	
		= link_to "Delete", @pin,  method: :delete, data: { confirm: "Are you sure?" }