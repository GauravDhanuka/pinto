.col-md-8.col-md-offset-2
	.panel.panel-default
		.panel-heading
			%h1.text-center Edit Pin
		.panel-body	
			%strong.center Current Image
			%br/
			.current_image
				= image_tag @pin.image.url(:thumb)
			%br/
			= render 'form'
		.panel-footer	
			= link_to "Cancel", @pin, class: "btn btn-default"

